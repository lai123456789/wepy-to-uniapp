/*定义滚动条高宽及背景 高宽分别对应横竖滚动条的尺寸*/
page,
.classify-ctner {
  height: 100%;
  position: relative;
}
page .ix-input-wrap,
  .classify-ctner .ix-input-wrap {
    position: absolute;
    left: 0;
    top: 0;
    width: 100%;
    padding: 12rpx 45rpx;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
}
page .ix-input-wrap::after,
    .classify-ctner .ix-input-wrap::after {
      position: absolute;
      left: 0;
      bottom: 0;
      content: '';
      height: 1px;
      width: 100%;
      background: #ECECEC;
      -webkit-transform: scaleY(0.5);
              transform: scaleY(0.5);
}
page .ix-input-wrap .input-search,
    .classify-ctner .ix-input-wrap .input-search {
      width: 46rpx;
      padding-left: 16rpx;
      border-top-left-radius: 30rpx;
      border-bottom-left-radius: 30rpx;
      background: #F6F6F6;
      display: -webkit-box;
      display: -webkit-flex;
      display: flex;
      -webkit-box-align: center;
      -webkit-align-items: center;
              align-items: center;
}
page .ix-input-wrap .input-search image,
      .classify-ctner .ix-input-wrap .input-search image {
        width: 25rpx;
        height: 26rpx;
}
page .ix-input-wrap input,
    .classify-ctner .ix-input-wrap input {
      -webkit-box-flex: 1;
      -webkit-flex: 1;
              flex: 1;
      border-top-left-radius: 0;
      border-bottom-left-radius: 0;
}
page .ix-input-wrap .input-msg,
    .classify-ctner .ix-input-wrap .input-msg {
      width: 28rpx;
      display: -webkit-box;
      display: -webkit-flex;
      display: flex;
      -webkit-box-align: center;
      -webkit-align-items: center;
              align-items: center;
      margin-left: 18rpx;
}
page .ix-input-wrap .input-msg image,
      .classify-ctner .ix-input-wrap .input-msg image {
        width: 27rpx;
        height: 25rpx;
}
page .cs-scroll-outer,
  .classify-ctner .cs-scroll-outer {
    height: 100%;
    padding-top: 76rpx;
}
page .cs-scroll-inner,
  .classify-ctner .cs-scroll-inner {
    width: 100%;
    height: 100%;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
}
page .cs-scroll-inner .cs-left,
    .classify-ctner .cs-scroll-inner .cs-left {
      width: 220rpx;
      position: relative;
      text-align: center;
}
page .cs-scroll-inner .cs-left::after,
      .classify-ctner .cs-scroll-inner .cs-left::after {
        position: absolute;
        top: 0;
        right: 0;
        content: '';
        height: 100%;
        width: 1px;
        background: #ECECEC;
        -webkit-transform: scaleX(0.5);
                transform: scaleX(0.5);
}
page .cs-scroll-inner .cs-left .cs-left-item,
      .classify-ctner .cs-scroll-inner .cs-left .cs-left-item {
        display: inline-block;
        width: 150rpx;
        padding: 10rpx 10rpx;
        margin: 30rpx;
        font-size: 24rpx;
        line-height: 1.4;
        border-radius: 26rpx;
}
page .cs-scroll-inner .cs-left .cs-left-item-active,
      .classify-ctner .cs-scroll-inner .cs-left .cs-left-item-active {
        background: #FF7F00;
        color: #FFF;
}
page .cs-scroll-inner .cs-right,
    .classify-ctner .cs-scroll-inner .cs-right {
      -webkit-box-flex: 1;
      -webkit-flex: 1;
              flex: 1;
}
page .cs-scroll-inner .cs-right .right-con-outer,
      .classify-ctner .cs-scroll-inner .cs-right .right-con-outer {
        padding: 16rpx;
}
page .cs-scroll-inner .cs-right .right-banner,
      .classify-ctner .cs-scroll-inner .cs-right .right-banner {
        height: 228rpx;
        margin-bottom: 28rpx;
        border-radius: 10rpx;
        overflow: hidden;
}
page .cs-scroll-inner .cs-right .right-banner image,
        .classify-ctner .cs-scroll-inner .cs-right .right-banner image {
          width: 100%;
          height: 100%;
}
page .cs-scroll-inner .cs-right .right-list,
      .classify-ctner .cs-scroll-inner .cs-right .right-list {
        overflow: hidden;
}
page .cs-scroll-inner .cs-right .right-list .right-list-item,
        .classify-ctner .cs-scroll-inner .cs-right .right-list .right-list-item {
          margin-right: 2%;
}
page .cs-scroll-inner .cs-right .right-list .right-list-item:nth-child(3n),
        .classify-ctner .cs-scroll-inner .cs-right .right-list .right-list-item:nth-child(3n) {
          margin-right: 0;
}
page .cs-scroll-inner .cs-right .right-list .right-list-item,
        .classify-ctner .cs-scroll-inner .cs-right .right-list .right-list-item {
          text-align: center;
          width: 32%;
          float: left;
          margin-bottom: 34rpx;
}
page .cs-scroll-inner .cs-right .right-list .right-list-item image,
          .classify-ctner .cs-scroll-inner .cs-right .right-list .right-list-item image {
            width: 90rpx;
            height: 100rpx;
            display: inline-block;
            margin-bottom: 18rpx;
}
page .cs-scroll-inner .cs-right .right-list .right-list-item view,
          .classify-ctner .cs-scroll-inner .cs-right .right-list .right-list-item view {
            line-height: 1.2;
            font-size: 20rpx;
}

